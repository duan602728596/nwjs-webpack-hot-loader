{
  "name": "nwjs-webpack-hot-loader",
  "version": "0.0.1-alpha.1",
  "description": "nwjs和webpack下的热更新功能。",
  "scripts": {
    "start": "npm run cleanlib && ./node_modules/.bin/tsc --watch",
    "build": "npm run cleanlib && ./node_modules/.bin/tsc",
    "cleanlib": "./node_modules/.bin/rimraf lib",
    "webpack": "./node_modules/.bin/webpack --config ./engineering/webpack.config.js --watch"
  },
  "main": "./engineering/build/index.html",
  "nodejs": true,
  "window": {
    "position": "center",
    "toolbar": true,
    "frame": true,
    "width": 1200,
    "height": 600,
    "fullscreen": false,
    "show_in_taskbar": true
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/preset-react": "^7.0.0-beta.39",
    "@types/node": "^9.4.1",
    "babel-loader": "^8.0.0-beta.0",
    "bundle-loader": "^0.5.5",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.30.1",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.2",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "loader-utils": "^1.1.0"
  }
}
